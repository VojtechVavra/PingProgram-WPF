<Window x:Class="ShowPing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        mc:Ignorable="d"
        Title="Show Ping Ingame"
        WindowState="Maximized"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterScreen"
        >

    <Grid Background="#00000000">
        <TextBlock x:Name="textBlock_ping_text" HorizontalAlignment="Left" Margin="25,274,0,0" TextWrapping="Wrap" Text="PING: " VerticalAlignment="Top" Height="32" Width="56" Foreground="#FFC9C9C9" FontSize="20" FontWeight="Bold" Cursor="None" IsManipulationEnabled="True" IsEnabled="False" Visibility="Hidden"/>
        <TextBlock x:Name="textBlock_ping_value" HorizontalAlignment="Left" Margin="20,274,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="105" Foreground="#FFC9C9C9" FontSize="20" FontWeight="Bold" IsHitTestVisible="False"/>

    </Grid>

</Window>
